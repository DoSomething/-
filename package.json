{
  "private": true,
  "scripts": {
    "start": "npm run clean && webpack --env=development --hide-modules --watch",
    "build": "npm run clean && webpack  --env=production",
    "build:dev": "npm run clean && webpack --env=development",
    "clean": "rm -rf public/dist",
    "test": "jest --watch",
    "test:ci": "jest",
    "heroku-postbuild": "npm run build",
    "lint": "eslint --fix --ext .js resources/assets",
    "format": "prettier --write \"{docs,resources}/**/*.{js,md,scss,graphql}\""
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "engines": {
    "node": "8.x",
    "npm": "6.x"
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all"
  },
  "babel": {
    "presets": [
      "@dosomething"
    ]
  },
  "jest": {
    "testURL": "http://rogue.dev",
    "setupFilesAfterEnv": [
      "<rootDir>/jest-setup.js"
    ],
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/resources/assets/__mocks__/fileMock.js",
      "\\.(css|scss)$": "identity-obj-proxy"
    }
  },
  "dependencies": {
    "@babel/runtime": "^7.5.4",
    "@dosomething/forge": "^6.9.1",
    "@dosomething/gateway": "^2.0.1",
    "classnames": "^2.2.6",
    "core-js": "^3.1.4",
    "date-fns": "^1.30.1",
    "dosomething-modal": "^0.3.4",
    "environment-badge": "^1.2.1",
    "graphql": "^14.4.2",
    "graphql-tag": "^2.10.1",
    "lodash": "^4.17.14",
    "prop-types": "^15.6.2",
    "react": "^16.10.1",
    "react-dom": "^16.10.1"
  },
  "devDependencies": {
    "@babel/core": "^7.5.4",
    "@dosomething/babel-preset": "^3.2.0",
    "@dosomething/eslint-config": "^5.0.1",
    "@dosomething/webpack-config": "^5.1.0",
    "babel-jest": "^24.8.0",
    "enzyme": "^3.10.0",
    "enzyme-adapter-react-16": "^1.14.0",
    "enzyme-to-json": "^3.4.2",
    "eslint-loader": "^1.9.0",
    "husky": "^3.0.8",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^24.8.0",
    "prettier": "1.18.2",
    "pretty-quick": "^1.11.1",
    "react-test-renderer": "^16.10.1",
    "sinon": "^7.5.0",
    "webpack": "^4.41.0",
    "webpack-cli": "^3.3.6"
  }
}
