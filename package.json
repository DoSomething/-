{
  "private": true,
  "scripts": {
    "start": "npm run clean && NODE_ENV=development webpack --watch",
    "build": "npm run clean && NODE_ENV=production webpack",
    "build:dev": "npm run clean && NODE_ENV=development webpack",
    "clean": "rm -rf public/dist",
    "test": "jest --watch",
    "test:ci": "jest",
    "heroku-postbuild": "npm run build",
    "lint": "eslint --fix --ext .js resources/assets",
    "precommit": "pretty-quick --staged",
    "format": "prettier --write \"{docs,resources}/**/*.{js,md,scss,graphql}\""
  },
  "engines": {
    "node": "8.x",
    "npm": "5.x"
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all"
  },
  "babel": {
    "presets": [
      "@dosomething/babel-config"
    ]
  },
  "jest": {
    "testURL": "http://rogue.dev",
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/resources/assets/__mocks__/fileMock.js",
      "\\.(css|scss)$": "identity-obj-proxy"
    }
  },
  "dependencies": {
    "@dosomething/forge": "^6.8.1",
    "@dosomething/gateway": "^1.2.2",
    "babel-polyfill": "^6.26.0",
    "classnames": "^2.2.6",
    "date-fns": "^1.30.1",
    "dosomething-modal": "^0.3.4",
    "environment-badge": "^1.0.0",
    "eslint-config-prettier": "^2.10.0",
    "lodash": "^4.17.11",
    "prop-types": "^15.6.2",
    "react": "^15.6.2",
    "react-dom": "^15.6.2",
    "sinon": "^4.5.0"
  },
  "devDependencies": {
    "@dosomething/babel-config": "^2.2.2",
    "@dosomething/eslint-config": "^4.0.0",
    "@dosomething/webpack-config": "^3.0.0",
    "babel-jest": "^21.0.2",
    "enzyme": "^2.9.1",
    "enzyme-to-json": "^2.0.0",
    "eslint-loader": "^1.9.0",
    "husky": "^0.14.3",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^21.0.2",
    "prettier": "1.13.4",
    "pretty-quick": "^1.8.0",
    "react-test-renderer": "^15.6.1",
    "webpack": "^3.12.0"
  }
}
